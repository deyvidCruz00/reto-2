	"item": [
		{
			"name": "1. Autenticación",
			"item": [
				{
					"name": "Crear Usuario Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Usuario creado exitosamente\", function () {",
									"    pm.response.to.have.status(201);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userID\": \"admin\",\n    \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login/createuser",
							"host": ["{{base_url}}"],
							"path": ["login", "createuser"]
						}
					}
				},
				{
					"name": "Login - Obtener Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Login exitoso\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"    pm.test(\"Token guardado\", function () {",
									"        pm.expect(jsonData.token).to.not.be.empty;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userID\": \"admin\",\n    \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login/authuser",
							"host": ["{{base_url}}"],
							"path": ["login", "authuser"]
						}
					}
				}
			]
		},
		{
			"name": "2. Gestión de Empleados",
			"item": [
				{
					"name": "Crear Empleado",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generar documento aleatorio",
									"var randomDoc = \"EMP\" + Math.floor(Math.random() * 100000);",
									"pm.collectionVariables.set(\"employee_document\", randomDoc);"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Empleado creado exitosamente\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Respuesta contiene datos del empleado\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.document).to.not.be.empty;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"document\": \"{{employee_document}}\",\n    \"firstname\": \"Juan\",\n    \"lastname\": \"Pérez\",\n    \"email\": \"juan.perez@empresa.com\",\n    \"phone\": \"3001234567\",\n    \"status\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/employee/createemployee",
							"host": ["{{base_url}}"],
							"path": ["employee", "createemployee"]
						}
					}
				},
				{
					"name": "Listar Todos los Empleados",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Listado exitoso\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Respuesta es un array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/employee/findallemployees",
							"host": ["{{base_url}}"],
							"path": ["employee", "findallemployees"]
						}
					}
				}
			]
		},
		{
			"name": "3. SAGA - Check-In",
			"item": [
				{
					"name": "Iniciar SAGA Check-In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"SAGA iniciada exitosamente\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"var jsonData = pm.response.json();",
									"if (jsonData.sagaId) {",
									"    pm.collectionVariables.set(\"saga_id\", jsonData.sagaId);",
									"    pm.test(\"SagaId guardado\", function () {",
									"        pm.expect(jsonData.sagaId).to.not.be.empty;",
									"    });",
									"}"
								],
