							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"employeeDocument\": \"{{employee_document}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/saga/check-in",
							"host": ["{{base_url}}"],
							"path": ["saga", "check-in"]
						}
					}
				},
				{
					"name": "Consultar Estado de SAGA",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Consulta exitosa\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"SAGA completada\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.status).to.be.oneOf([\"COMPLETED\", \"PENDING\", \"FAILED\"]);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/saga/{{saga_id}}",
							"host": ["{{base_url}}"],
							"path": ["saga", "{{saga_id}}"]
						}
					}
				},
				{
					"name": "Intentar Check-In Duplicado (Debe Fallar)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"SAGA detecta entrada duplicada\", function () {",
									"    var jsonData = pm.response.json();",
									"    // Puede retornar 200 pero con status FAILED o error específico",
									"    pm.expect(jsonData.status || jsonData.error).to.exist;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"employeeDocument\": \"{{employee_document}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/saga/check-in",
							"host": ["{{base_url}}"],
							"path": ["saga", "check-in"]
						}
					}
				}
			]
		},
